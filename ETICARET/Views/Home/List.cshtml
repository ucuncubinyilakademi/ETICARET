@using ETICARET.Models
@model IEnumerable<ProductModel>
@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="row mt-2">
        <div class="col-3">
            @Html.Action("GetCategories")
        </div>
        <div class="col-9">
            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning">
                    <i class="fa-solid fa-circle-exclamation"></i> Bu kategoride bir ürün bulunamadı.
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="fa-regular fa-circle-check"></i> @Model.Count() adet ürün bulundu.
                </div>
            }
            @Html.Partial("_ProductList", Model)
        </div>
    </div>


</div>

